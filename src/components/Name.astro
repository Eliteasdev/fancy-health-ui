---
const name = "Example Name";
---

<div class="flex justify-between items-center my-4 mx-2">
  <div class="avatar-left flex items-center">
    <div class="avatar">
      <div class="w-10 h-10 rounded-full">
        <img src="../../public/img/avatar.jpg" />
      </div>
    </div>
    <p class="m-1 font-semibold">{name}</p>
  </div>
  <button class="btn btn-circle">
    <img src="../../public/svg/notification-icon.svg" />
  </button>
</div>
